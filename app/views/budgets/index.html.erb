<div>
  <div>
    <h1>
      List of all budgets
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new budget
    </h2>

    <form action="/insert_budget" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <div>
        <label for="amount_box">
          Amount
        </label>

        <input type="text" id="amount_box" name="query_amount">
      </div>

      <div>
        <label for="category_id_box">
          Category
        </label>

        <input type="text" id="category_id_box" name="query_category_id">
      </div>

      <div>
        <label for="alert_percentage_box">
          Alert percentage
        </label>

        <input type="text" id="alert_percentage_box" name="query_alert_percentage">
      </div>

      <button>
        Create budget
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Date
        </th>

        <th>
          Amount
        </th>

        <th>
          Category
        </th>

        <th>
          Alert percentage
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_budgets.each do |a_budget| %>
      <tr>
        <td>
          <%= a_budget.id %>
        </td>

        <td>
          <%= a_budget.user_id %>
        </td>

        <td>
          <%= a_budget.date %>
        </td>

        <td>
          <%= a_budget.amount %>
        </td>

        <td>
          <%= a_budget.category_id %>
        </td>

        <td>
          <%= a_budget.alert_percentage %>
        </td>

        <td>
          <%= time_ago_in_words(a_budget.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_budget.updated_at) %> ago
        </td>

        <td>
          <a href="/budgets/<%= a_budget.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
